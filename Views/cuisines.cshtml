@Html.Partial("head.cshtml")
<div class="container">
  <h1>All cuisines</h1>
  <hr />
  @if (@Model.Count == 0)
  {
    <p>There are no cuisines.</p>
  }
  <ul>
    @foreach (var cuisine in Model)
    {
      <li><a href="/cuisines/@cuisine.GetId()">@cuisine.GetName()</a> | <a href="/cuisine/edit/@cuisine.GetId()">Edit </a>| <a href="/cuisine/delete/@cuisine.GetId()">Delete</a></li>  }
  </ul>
  <a href="/cuisines/new">Add new cuisine</a>
  <br>
  <a href="/">Return Home</a>

  <form action="/cuisines/clear" method="post">
    <button type="submit">Clear all cuisines</button>
  </form>
</div>
