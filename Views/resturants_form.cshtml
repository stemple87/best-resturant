@Html.Partial("head.cshtml")
<div class="container">
  <h1>Add a new resturant</h1>
  <hr />
  <form action="/resturants/new" method="post">
    <label for="resturant-name">Resturant name:</label>
    <input id="resturant-name" name="resturant-name" type="text">
    <br>
    <label for="resturant-location">Resturant location:</label>
    <input id="resturant-location" name="resturant-location" type="text">
    <br><br>
    <label for="new-year">Enter year:</label>
    <input id="new-year" name="new-year" type="text">
    <br>
    <label for="new-month">Enter month:</label>
    <input id="new-month" name="new-month" type="text">
    <br>
    <label for="new-day">Enter day:</label>
    <input id="new-day" name="new-day" type="text">
    <br><br>
    <select name="cuisine-id">
      @foreach (var cuisine in Model)
      {
        <option value="@cuisine.GetId()">@cuisine.GetName()</option>
      }
    </select>
    <button type="submit">Add new resturant</button>
    <br>
  </form>
  <p><a href="/">Return home</a></p>
  <p><a href="/resturants">View all resturants</a></p>
</div>
